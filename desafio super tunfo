        default:
            printf("Atributo invÃ¡lido.\n");
            return 1;
    }

    // Resultado final
    printf("\n====== Resultado Final ======\n");
    if (resultado1 > resultado2)
        printf("ğŸ† Jogador da Carta 1 venceu o jogo!\n");
    else if (resultado2 > resultado1)
        printf("ğŸ† Jogador da Carta 2 venceu o jogo!\n");
    else
        printf("ğŸ¤ O jogo terminou empatado!\n");

