    printf("CÃ³digo: %s\n", codigo1);
    printf("Cidade: %s\n", nomeCidade1);
    printf("PopulaÃ§Ã£o: %d habitantes\n", populacao1);
    printf("Ãrea: %.2f kmÂ²\n", area1);
    printf("PIB: R$ %.2f bilhÃµes\n", pib1);
