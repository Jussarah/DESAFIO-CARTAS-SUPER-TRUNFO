        case 4:
            if (pontosTuristicos1 > pontosTuristicos2) resultado1++;
            else if (pontosTuristicos2 > pontosTuristicos1) resultado2++;
            printf("Resultado: %s venceu em pontos turÃ­sticos.\n", (pontosTuristicos1 == pontosTuristicos2) ? "Empate" : (pontosTuristicos1 > pontosTuristicos2) ? "Cidade 1" : "Cidade 2");
            break;
        default:
            printf("Atributo invÃ¡lido.\n");
            return 1;
    }

    // Segunda comparaÃ§Ã£o
    printf("\n--- Escolha outro atributo diferente para comparar ---\n");
    printf("1. PopulaÃ§Ã£o\n2. Ãrea\n3. PIB\n4. Pontos TurÃ­sticos\n");
    printf("Escolha: ");
    if (scanf("%d", &escolha2) != 1) {
        printf("Entrada invÃ¡lida.\n");
        return 1;
    }

    if (escolha2 == escolha) {
        printf("VocÃª escolheu o mesmo atributo. Reinicie o jogo.\n");
        return 1;
    }

    switch (escolha2) {
        case 1:
            if (populacao1 > populacao2) resultado1++;
            else if (populacao2 > populacao1) resultado2++;
            printf("Resultado: %s venceu na populaÃ§Ã£o.\n", (populacao1 == populacao2) ? "Empate" : (populacao1 > populacao2) ? "Cidade 1" : "Cidade 2");
