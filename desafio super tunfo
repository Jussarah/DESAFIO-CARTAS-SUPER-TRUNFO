    printf("Estado: %c\n", estado2);
    printf("CÃ³digo: %s\n", codigo2);
    printf("Cidade: %s\n", nomeCidade2);
    printf("PopulaÃ§Ã£o: %d habitantes\n", populacao2);
    printf("Ãrea: %.2f kmÂ²\n", area2);
    printf("PIB: R$ %.2f bilhÃµes\n", pib2);
    printf("Pontos TurÃ­sticos: %d\n", pontosTuristicos2);

    // Primeira comparaÃ§Ã£o
    printf("\n--- Escolha um atributo para comparar (1 a 4) ---\n");
    printf("1. PopulaÃ§Ã£o\n2. Ãrea\n3. PIB\n4. Pontos TurÃ­sticos\n");
    printf("Escolha: ");
    if (scanf("%d", &escolha) != 1) {
        printf("Entrada invÃ¡lida.\n");
        return 1;
    }

    switch (escolha) {
        case 1:
            if (populacao1 > populacao2) resultado1++;
            else if (populacao2 > populacao1) resultado2++;
            printf("Resultado: %s venceu na populaÃ§Ã£o.\n", (populacao1 == populacao2) ? "Empate" : (populacao1 > populacao2) ? "Cidade 1" : "Cidade 2");
            break;
        case 2:
            if (area1 > area2) resultado1++;
            else if (area2 > area1) resultado2++;
            printf("Resultado: %s venceu na Ã¡rea.\n", (area1 == area2) ? "Empate" : (area1 > area2) ? "Cidade 1" : "Cidade 2");
            break;
        case 3:
            if (pib1 > pib2) resultado1++;
            else if (pib2 > pib1) resultado2++;
            printf("Resultado: %s venceu no PIB.\n", (pib1 == pib2) ? "Empate" : (pib1 > pib2) ? "Cidade 1" : "Cidade 2");
